.l_main
  .prev-next
    width: 100%
    display: flex
    justify-content: space-between
    align-items: baseline
    color: $color-meta
    margin: 0
    .prev
      text-align: left
      border-top-right-radius: 32px
      border-bottom-right-radius: 32px

    .next
      text-align: right
      border-top-left-radius: 32px
      border-bottom-left-radius: 32px

    p
      margin: $gap

    section
      color: $color-meta
      padding: $gap
      border-radius: $border-radius
      &:hover
        color: $color-hover


    @media screen and (max-width: $device-mobile)
      section
        border-radius: 0

  // 文章中
  .article
    .prev-next
      width: 100%
      display: flex
      justify-content: space-between
      align-content: flex-start
      section
        width: 100%
        padding: $gap * 0.5
        color: $color-meta
        background: $color-block
        border-radius: $border-radius-codeblock
        a:hover
          text-decoration: none
        p
          margin: 0
        h4
          margin-top: $gap * 0.5
          margin-bottom: $gap * 0.5
          position: relative
          font-weight: bold
          font-size: $font-size-body
          @media screen and (max-width:$device-mobile)
            letter-spacing: -1px
        h6
          margin: 0
          word-spacing: normal
        trans(.1s)
        .tags
          background: transparent
          margin: $gap * 0.5
          margin-bottom: 0
          font-size: $font-size-code
          word-spacing: 4px
          a
            color: $color-meta
            &:hover
              color: $color-hover
              text-decoration: none
            i
              margin-right: 2px
        &:first-child
          margin-left: 0
          margin-right: 0

      .prev
        text-align: left
        margin-left: 0
        margin-right: $gap * 0.5

      .next
        text-align: right
        margin-left: $gap * 0.5
        margin-right: 0
