// inport font
@font-face
  font-family: 'Varela Round'
  src: url(https://cdn.jsdelivr.net/gh/xaoxuu/cdn-fonts@19.1.7/VarelaRound/VarelaRound-Regular.ttf)
  font-weight: normal
  font-style: normal


// body font
$font-family = 'Varela Round', "Microsoft YaHei", "Source Sans Pro", "Helvetica Neue", Menlo, Monaco, monospace, "Lucida Console", sans-serif, Helvetica, "Hiragino Sans GB", "Hiragino Sans GB W3", Source Han Sans CN Regular, WenQuanYi Micro Hei, Arial, sans-serif
// logo font
$font-family-logo = $font-family
// inline code & codeblock font
$font-family-code = Menlo, Monaco, courier, monospace, "Lucida Console", 'Source Code Pro', "Microsoft YaHei", Helvetica, Arial, sans-serif, 'Ubuntu'


// font size
$font-size = 16px
$font-size-h1 = 1.5rem
$font-size-h2 = 1.42rem
$font-size-h3 = 1.28rem
$font-size-h4 = 1.08rem
$font-size-h5 = 1rem
$font-size-h6 = 1rem
$font-size-body = .9375rem // 15px
$font-size-meta = .875rem // 14px
$font-size-code = .8125rem // 13px
$font-size-footnote = .75rem  // the smallest (12px)

// line-height
$line-height = 1.4

$font-size-large = 3rem
$font-size-huge = 4rem
$font-size-ultra = 6rem
