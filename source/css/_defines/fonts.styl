// inport font
@font-face
  font-family: 'Varela Round'
  src: url(https://cdn.jsdelivr.net/gh/xaoxuu/cdn-fonts@19.1.7/VarelaRound/VarelaRound-Regular.ttf)
  font-weight: normal
  font-style: normal


// body font
$fontfamily = 'Varela Round', "Microsoft YaHei", "Source Sans Pro", "Helvetica Neue", Menlo, Monaco, monospace, "Lucida Console", sans-serif, Helvetica, "Hiragino Sans GB", "Hiragino Sans GB W3", Source Han Sans CN Regular, WenQuanYi Micro Hei, Arial, sans-serif
// logo font
$fontfamily-logo = $fontfamily
// inline code & codeblock font
$fontfamily-code = Menlo, Monaco, courier, monospace, "Lucida Console", 'Source Code Pro', "Microsoft YaHei", Helvetica, Arial, sans-serif, 'Ubuntu'


// font size
$fontsize = 16px
$fontsize-h1 = 1.5rem      // 24px
$fontsize-h2 = 1.375rem    // 22px bottom line
$fontsize-h3 = 1.25rem     // 20px colorful title
$fontsize-h4 = 1.125rem    // 18px
$fontsize-h5 = 1rem        // 16px bold
$fontsize-h6 = 1rem        // 16px
$fontsize-body = 1rem      // 16px
$fontsize-list = .9375rem  // 15px
$fontsize-meta = .875rem   // 14px
$fontsize-code = .8125rem  // 13px
$fontsize-footnote = .75rem  // the smallest (12px)

// line-height
$lineheight = 1.4em

$fontsize-large = 3rem
$fontsize-huge = 4rem
$fontsize-ultra = 6rem
